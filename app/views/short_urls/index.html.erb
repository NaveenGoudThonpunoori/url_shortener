<p id="notice"><%= notice %></p>

<h1>Short Urls</h1>

<table border="1px solid">
  <thead>
    <tr>
      <th>Original Url</th>
      <th>Short Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_urls.each do |short_url| %>
      <tr>
        <td><%= "http://#{short_url.original}" %></td>
        <td>  <%= link_to "http://localhost:9000/#{short_url.short}", main_web_path(short_url.short) , target: "_blank"%></td>
        <td><%= link_to 'Show', short_url %></td>
        <td><%= link_to 'Destroy', short_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Down load CSV', short_urls_path(format: 'csv') %>

<%= link_to 'New Short Url', new_short_url_path %>
